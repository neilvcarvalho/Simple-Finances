<tr class="movimentacao movimentacao_<%=movimentacao.tipo%>" id="movimentacao-<%=movimentacao.id%>">
	<td style="width: 100px"><%= movimentacao.date.strftime('%d/%m/%Y') %></td>
	<% if movimentacao.tipo != "T" %>
		<td><%= movimentacao.nome_categoria %></td>
	<% else %>
		<td>TransferÃªncia</td>
	<% end %>
	<td><%= number_to_currency(movimentacao.quantia) %></td>
	<% if movimentacao.tipo != "T" %>
		<td><%= movimentacao.conta.descricao %></td>
	<% else %>
		<td><%= movimentacao.conta.descricao %> - <%= Conta.find_by_id(movimentacao.conta_destino_id).try(:descricao) %> </td>
	<% end %>
